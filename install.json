{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "title": "Location",
        "order": 1,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "email": {
        "title": "Email",
        "order": 2,
        "type": "string",
        "placeholder": "your@email.com"
        },
      "label": {
        "title": "Label",
        "order": 3,
        "type": "string",
        "default": "Email me!"
      }
    }
  }
}
